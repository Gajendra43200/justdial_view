<style type="text/css">
{
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
}
body{
    font-family: Helvetica;
    -webkit-font-smoothing: antialiased;

}
.as{
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    padding: 30px 0;
}
h1{
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 30px 0;
}

/* Table Styles */

.table-wrapper{
    margin: 10px 70px 70px;
    box-shadow: 0px 35px 50px rgba( 0, 0, 0, 0.2 );
}

.fl-table {
    border-radius: 5px;
    font-size: 12px;
    font-weight: normal;
    border: none;
    border-collapse: collapse;
    width: 100%;
    max-width: 100%;
    white-space: nowrap;
    background-color: white;
}

.fl-table td, .fl-table th {
    text-align: center;
    padding: 8px;
}

.fl-table td {
    border-right: 1px solid #f8f8f8;
    font-size: 12px;
}

.fl-table thead th {
    color: #ffffff;
    background: #4FC3A1;
}


.fl-table thead th:nth-child(odd) {
    color: #ffffff;
    background: #324960;
}

.fl-table tr:nth-child(even) {
    background: #F8F8F8;
}
.footer{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: -60px;
  background-color: white;
}
.navbar-buttons {
  display: flex;
  gap: 10px;
}
.navbar-button {
  background-color: #4FC3A1;;
  color: #FFFFFF;
/*  color: #4FC3A1;;*/
  border: none;
  padding: 8px 12px;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
  margin-top: 20px;
}
.navbar-button:hover {
  background-color: #27AE60;
}

</style>



<!-- <div class="table-wrapper"> -->
  <div>
    <% if @service %>
  <h1 > create review for <%= @service.service_name %></h1>
  <%= render 'form' %>
  <%else %>
  </div>
  <div class="table-wrapper">
  <h1> Select Service For Review</h1>
  <ul>

  <table class="fl-table">
    <thead>
      <tr>
        <th>Status</th>
        <th>service_name</th>
        <th>location</th>
        <th>city</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%@services.each do |service| %>
        <tr>
          <td><%= service.status %></td>
          <td><%= service.service_name %></td>
          <td><%= service.location %></td>
          <td><%= service.city %></td>
          <td><%= link_to service.service_name, new_review_path(service_id: service.id)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="as">
    <%= link_to "All Review", reviews_path, class:"navbar-button" %>
  </div>

</div>
  <%end %>
