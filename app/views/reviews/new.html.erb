
<% if @service %>
<h1> create review for <%= @service.    service_name %></h1>
<%= render 'form' %>
<%else %>
<h1> select a service to review</h1>
<ul>


  <table>
  <thead>
    <tr>
      <th>Status    |</th>
      <th>service_name         |</th>
      <th>location        |</th>
      <th>city</th>
      <th>user_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@services.each do |service| %>
      <tr>
        <td><%= service.status %></td>
        <td><%= service.service_name %></td>
        <td><%= service.location %></td>
        <td><%= service.city %></td>
        <td><%= service.user_id %></td>
      <td> <%= link_to service.service_name, new_review_path(service_id: service.id) %></td>

      </tr>
    <% end %>
  </tbody>
</table>


  <%end %>
