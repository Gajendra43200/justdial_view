
<style>
.table-wrapper{
    margin: 10px 70px 70px;
    box-shadow: 0px 35px 50px rgba( 0, 0, 0, 0.2 );
}

.fl-table {
    border-radius: 5px;
    font-size: 12px;
    font-weight: normal;
    border: none;
    border-collapse: collapse;
    width: 100%;
    max-width: 100%;
    white-space: nowrap;
    background-color: white;
}

.fl-table td, .fl-table th {
    text-align: center;
    padding: 8px;
}

.fl-table td {
    border-right: 1px solid #f8f8f8;
    font-size: 12px;
}

.fl-table thead th {
    color: #ffffff;
    background: #4FC3A1;
}


.fl-table thead th:nth-child(odd) {
    color: #ffffff;
    background: #324960;
}

.fl-table tr:nth-child(even) {
    background: #F8F8F8;
}
/*.footer{
  display: flex;
  align-items: center;
  justify-content: center;
  margin: -60px;
  background-color: white;
}*/
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: whitesmoke;
  color: white;
  text-align: center;
  padding-top: 22px;
  height: 28px;
  margin-bottom: 17px;
}

.navbar-buttons {
  display: flex;
  gap: 10px;
}
.navbar-button {
  background-color: #2ECC71;
  color: #FFFFFF;
  border: none;
  padding: 8px 12px;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
  margin-top: 20px;
}
.navbar-button:hover {
  background-color: #27AE60;
}

h2{
    text-align: center;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: black;
    padding: 20px 0;
}

</style>

<h2>All Users</h2>
<div class="table-wrapper">
    <table class="fl-table">
    <thead>
    <tr>
      <th>User_Type</th>
      <th>name </th>
      <th>email </th>
      <th>city</th>
      <th>state</th>
      <th>location</th>
      <th>address</th>
      <th>password</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.user_type %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.location %></td>
        <td><%= user.address %></td>
        <td><%= user.password %></td>
        <td><%= link_to "Show", user, class: 'user'%></td>
        <td><%= link_to "Edit", edit_user_path(user)%></td>
        <td><%= button_to "Destroy", user, method: :delete%></td>
    </tr>
    <% end %>
        <tbody>
    </table>
</div>
<div class="footer">
    <%= link_to "Create User", new_user_path, class:"navbar-button"%>
    <%= link_to "login  ", login_path,class:"navbar-button" %>
</div>





